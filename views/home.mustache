    <script>
        (function(){
            $('#btn-order').click(function(event){
                if(event)
                    event.preventDefault()

                var order = {
                    name: $('#order-name').val(),
                    email: $('#order-email').val(),
                    order: $('#order-description').val()
                }
                console.log('Place Order:' +JSON.stringify(order))
                $.ajax({
                    url: '/order',
                    method: 'post',
                    data: order,
                    success: function(resp){
                        console.log('ORDER RECEIVE:' +JSON.stringify(resp))
                        $('#btn-order-container').html('<h3>Thanks! We will send you an email when order is ready! </h3>')
                    },
                    error: function(resp){

                    }

                })
            })
        }) ()

    </script>
    
